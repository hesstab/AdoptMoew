<main class="user-profile">

  <div class="user-profile-head">
    <h2><%= @user.name %>'s Profile</h2>

    <%= image_tag @user.avatar, :width => 200 if @user.avatar.attached? %>

    <h5><%= @user.email %></h5>
  </div>

  <p>Cats listed by <%= @user.name %>:</p>
  <% @user.listings.each do |listing| %>
    <ul>
      <li><%= link_to listing.name, listing_path(listing) %></li>
    </ul>
  <% end %>

  <% if @user.listings.present? %>
    <%= link_to 'List another cat for adoption', new_listing_path(@listing) %>
  <% else %>
    <%= link_to 'List a cat for adoption', new_listing_path(@listing) %>
  <% end %>

</main>
