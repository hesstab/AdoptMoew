<h2>Edit profile</h2>

<%= form_for @user do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :age %>
<%= f.number_field :age %>

<%= f.label "Profile picture" %>
<%= f.file_field :avatar %>

<%= f.submit %>

<%= link_to 'Delete profile', @user, :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
<% end %>
